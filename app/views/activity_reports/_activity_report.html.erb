<tr>
  <td><%= link_to activity_report.volunteer.cgdvcode, activity_report.volunteer, class: "fw-semibold" %></td>
  <td><%= link_to "Semana #{activity_report.semana}", activity_report %></td>
  <td><%= link_to l(activity_report.created_at, :format => :rep), activity_report %></td>
  <td><%= link_to truncate(activity_report.reporte, :length => 25), activity_report %></td>
  <td class="smally text-end">
    <div class="d-inline-flex gap-1 flex-wrap justify-content-end">
      <% if can? :edit, ActivityReport %>
        <%= link_to t('helpers.submit.update', :model => "Reporte"), edit_activity_report_path(activity_report), class: "btn btn-outline-primary btn-sm" %>
      <% end %>
      <% if can? :destroy, ActivityReport %>
        <%= link_to t('helpers.delete.msg'), activity_report, :method => :delete, :confirm => t('helpers.delete.conf'), :title => "#{t('helpers.delete.msg')} #{activity_report.created_at}", class: "btn btn-outline-danger btn-sm" %>
      <% end %>
    </div>
  </td>
</tr>
