<div class="page-toolbar mb-3">
  <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-2">
    <h1 class="h2 mb-0">Reportes de Actividades</h1>
    <% unless current_user.volunteer_id.nil? %>
      <%= link_to "Nuevo Reporte de Actividades", new_activity_report_path, class: "btn btn-primary btn-sm" %>
    <% end %>
  </div>
</div>

<div class="card border-0 shadow-sm mb-3 search-panel">
  <div class="card-body">
    <%= search_form_for @search, :url => activity_reports_path, :html => { :method => :get, :class => "row g-3 align-items-end" } do |f| %>
      <div class="col-12">
        <h6 class="text-uppercase text-muted mb-1"><%= t('search.title') %></h6>
      </div>

      <% if current_user.admin? %>
        <div class="col-12 col-md-3">
          <%= f.label :cgdvcode_eq, t('patient.cgdvcode'), class: "form-label" %>
          <%= f.text_field :volunteer_cgdvcode_eq, :size => 3, class: "form-control" %>
        </div>
        <div class="col-12 col-md-5">
          <%= f.label :name_contains, t('patient.name'), class: "form-label" %>
          <%= f.text_field :volunteer_name_eq, class: "form-control" %>
        </div>
      <% end %>

      <div class="col-12 col-md-2">
        <%= f.label :semana_gteq, "Semanas desde:", class: "form-label" %>
        <%= f.text_field :semana_gteq, :size => 3, class: "form-control" %>
      </div>
      <div class="col-12 col-md-2">
        <%= f.label :semana_lteq, "hasta:", class: "form-label" %>
        <%= f.text_field :semana_lteq, :size => 3, class: "form-control" %>
      </div>
      <div class="col-12 col-md-2">
        <%= f.submit t('helpers.search'), class: "btn btn-outline-primary w-100" %>
      </div>
    <% end %>
  </div>
</div>

<div class="d-flex justify-content-between align-items-center mb-2">
  <strong class="text-muted small"><%= t('search.sort') %></strong>
  <div class="pagination-wrap"><%= paginate @activity_reports %></div>
</div>

<div class="card border-0 shadow-sm list-card">
  <div class="table-responsive">
    <table class="table table-hover align-middle mb-0 app-table">
      <thead class="table-light">
        <tr>
          <th><%= sort_link @search, :volunteer_cgdvcode, t('patient.cgdvcode') %></th>
          <th><%= sort_link @search, :semana, "Semanas", :default_order => :desc %></th>
          <th><%= sort_link @search, :created_at, t('all.created_at'), :default_order => :desc %></th>
          <th>Reportes</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <%= render @activity_reports %>
      </tbody>
    </table>
  </div>
</div>

<div class="pagination-wrap mt-3"><%= paginate @activity_reports %></div>
