<div class="card border-0 shadow-sm detail-section-card addresses">
  <div class="card-header d-flex justify-content-between align-items-center gap-2">
    <strong><%= t('address.title') %></strong>
    <%= link_to t('helpers.submit.create', :model => "Direccion"), new_polymorphic_path([model,Address]), class: "btn btn-outline-primary btn-sm" %>
  </div>
  <div class="table-responsive">
    <table class="table mb-0 app-table">
      <tbody>
        <% unless model.addresses.empty? %>
          <%= render @addresses, :model => model %>
        <% else %>
          <tr><td class="text-muted">Sin direcciones registradas.</td></tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
