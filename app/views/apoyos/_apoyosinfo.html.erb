<div class="card border-0 shadow-sm detail-section-card apoyos">
  <div class="card-header d-flex justify-content-between align-items-center gap-2">
    <strong><%= t('patient.apoyos') %></strong>
    <%= link_to t('helpers.submit.create', :model => "Apoyo"), new_patient_apoyo_path(@patient), class: "btn btn-outline-primary btn-sm" %>
  </div>
  <div class="table-responsive">
    <table class="table mb-0 app-table">
      <tbody>
        <% unless @patient.apoyos.empty? %>
          <%= render @apoyos %>
        <% else %>
          <tr><td class="text-muted">Sin apoyos.</td></tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
