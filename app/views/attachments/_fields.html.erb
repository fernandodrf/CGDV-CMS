<%= render 'shared/error_messages', :object => f.object %>
<div class="row g-3 app-form">
  <div class="col-12 col-md-6">
    <%= f.label :name, t('attachment.name'), class: "form-label" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
</div>
<div class="row g-3 mt-1 app-form">
  <div class="col-12">
    <%= f.label :fileattachment, 'Archivo Adjunto', class: "form-label" %>
    <% unless @child.fileattachment.model.id.nil? %>
      <div class="attachment-current-preview mb-2">
        <%= image_tag(image_attachment_path(@child), :alt => "Archivo Adjunto", :class => "avatar round attachment-preview-thumb img-thumbnail") %>
      </div>
    <% end %>
    <%= f.file_field :fileattachment, class: "form-control" %>
    <div class="form-check mt-2">
      <%= f.check_box :remove_fileattachment, class: "form-check-input" %>
      <%= f.label :remove_fileattachment, 'Eliminar Archivo?', class: "form-check-label" %>
    </div>
    <%= f.hidden_field :fileattachment_cache %>
  </div>
</div>
