<div class="card border-0 shadow-sm mb-3">
  <div class="card-header d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-2">
    <strong><%= t('patient.info') %></strong>
    <%= link_to t('helpers.submit.update', :model => "Datos Principales"), edit_contact_path(@contact), class: "btn btn-outline-primary btn-sm" %>
  </div>
  <div class="card-body p-0">
    <table class="table mb-0 app-table">
      <tbody>
        <tr><td colspan="2"><%= t('patient.name') %>: <%= @contact.name %></td></tr>
        <tr>
          <td><%= t('contact.company') %>: <%= @contact.company %></td>
          <td><%= t('contact.position') %>: <%= @contact.position %></td>
        </tr>
        <tr>
          <td><%= t('patient.birthdate') %>: <%= l @contact.birth, :format => :long %></td>
          <td><%= t('patient.age') %>: <%= t('datetime.distance_in_words.x_years', :count => edad(@contact.birth)) %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
