<%= render 'shared/error_messages', :object => f.object %>
<div class="row g-3">
  <div class="col-12 col-md-6">
    <%= f.label :name, t('patient.name'), class: "form-label" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="col-12 col-md-6">
    <%= f.label :company, t('contact.company'), class: "form-label" %>
    <%= f.text_field :company, class: "form-control" %>
  </div>
  <div class="col-12 col-md-6">
    <%= f.label :position, t('contact.position'), class: "form-label" %>
    <%= f.text_field :position, class: "form-control" %>
  </div>
  <div class="col-12 col-md-6">
    <%= f.label :birth, t('patient.birthdate'), class: "form-label d-block" %>
    <div class="date-select-inline">
      <%= f.date_select :birth, {:order => [:day, :month, :year], :start_year => Time.now.year - 100}, {:class => "form-select d-inline-block w-auto"} %>
    </div>
  </div>
</div>
