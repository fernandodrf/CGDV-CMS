<div class="card border-0 shadow-sm detail-section-card derechohabientes">
  <div class="card-header d-flex justify-content-between align-items-center gap-2">
    <strong><%= t('derechohabiente.title') %></strong>
    <%= link_to t('helpers.submit.create', :model => "Derechohabiente"), new_patient_derechohabiente_path(@patient), class: "btn btn-outline-primary btn-sm" %>
  </div>
  <div class="table-responsive">
    <table class="table mb-0 app-table">
      <tbody>
        <% unless @patient.derechohabientes.empty? %>
          <%= render @seguros %>
        <% else %>
          <tr><td class="text-muted">Sin derechohabientes.</td></tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
