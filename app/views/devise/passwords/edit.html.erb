<div class="row justify-content-center">
  <div class="col-12 col-md-10 col-lg-7 col-xl-6">
    <div class="card shadow-sm border-0 devise-card">
      <div class="card-body p-4">
        <h2 class="h4 mb-3"><%= t('.change_your_password') %></h2>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "devise-form" }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>

          <div class="mb-3">
            <%= f.label :password, t('.new_password'), class: "form-label" %>
            <% if @minimum_password_length %>
              <div class="form-text mb-1"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></div>
            <% end %>
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= f.label :password_confirmation, t('.confirm_new_password'), class: "form-label" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>

          <div class="d-grid">
            <%= f.submit t('.change_my_password'), class: "btn btn-primary" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
