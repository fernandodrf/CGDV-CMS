<div class="page-toolbar mb-3">
  <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-2">
    <h1 class="h2 mb-0"><%= t('donation2.index') %></h1>
    <%= link_to t('helpers.submit.create', :model => "Nueva DonaciÃ³n"), new_donation_path, class: "btn btn-primary btn-sm" %>
  </div>
</div>

<div class="card border-0 shadow-sm mb-3 search-panel">
  <div class="card-body">
    <%= search_form_for @search, :url => donations_path, :html => {:method => :get, class: "row g-3 align-items-end"} do |f| %>
      <div class="col-12">
        <h6 class="text-uppercase text-muted mb-1"><%= t('search.title') %></h6>
      </div>
      <div class="col-12 col-md-2">
        <%= f.label :folio_cont, t('note.folio'), class: "form-label" %>
        <%= f.text_field :folio_eq, :size => 3, class: "form-control" %>
      </div>
      <div class="col-12 col-md-3">
        <%= f.label :cgdvcode_eq, t('search.cgdvcode'), class: "form-label" %>
        <%= f.text_field :donor_cgdvcode_eq, :size => 3, class: "form-control" %>
      </div>
      <div class="col-12 col-md-5">
        <%= f.label :name_cont, t('search.name'), class: "form-label" %>
        <%= f.text_field :donor_name_cont, class: "form-control" %>
      </div>
      <div class="col-12 col-md-2">
        <%= f.submit t('helpers.search'), class: "btn btn-outline-primary w-100" %>
      </div>
    <% end %>
  </div>
</div>

<div class="d-flex justify-content-between align-items-center mb-2">
  <strong class="text-muted small"><%= t('search.sort') %></strong>
  <div class="pagination-wrap"><%= paginate @donations %></div>
</div>

<div class="card border-0 shadow-sm list-card">
  <div class="table-responsive">
    <table class="table table-hover align-middle mb-0 app-table">
      <thead class="table-light">
        <tr>
          <th><%= sort_link @search, :folio, t('note.folio'), :default_order => :desc %></th>
          <th><%= sort_link @search, :donor_cgdvcode, t('patient.cgdvcode'), :default_order => :desc %></th>
          <th><%= sort_link @search, :frecepcion, t('donation2.frecepcion'), :default_order => :desc  %></th>
          <th>Finalidad</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <%= render @donations %>
      </tbody>
    </table>
  </div>
</div>

<div class="pagination-wrap mt-3"><%= paginate @donations %></div>
