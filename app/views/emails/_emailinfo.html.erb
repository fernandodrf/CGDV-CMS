<div class="card border-0 shadow-sm detail-section-card emails">
  <div class="card-header d-flex justify-content-between align-items-center gap-2">
    <strong>Emails</strong>
    <%= link_to t('helpers.submit.create', :model => "Emails"), new_polymorphic_path([model,Email]), class: "btn btn-outline-primary btn-sm" %>
  </div>
  <div class="table-responsive">
    <table class="table mb-0 app-table">
      <tbody>
        <% unless model.emails.empty? %>
          <%= render @emails, :model => model %>
        <% else %>
          <tr><td class="text-muted">Sin emails registrados.</td></tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
