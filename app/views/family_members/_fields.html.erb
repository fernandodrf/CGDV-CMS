<%= render 'shared/error_messages', :object => f.object %>
<div class="row g-3">
  <div class="col-md-4">
    <%= f.label :parentesco, t('familymember.parentesco'), class: "form-label" %>
    <%= f.select :parentesco, FamilyMember::FAM, {}, { class: "form-select" } %>
  </div>
  <div class="col-md-4">
    <%= f.label :nombre, t('familymember.nombre'), class: "form-label" %>
    <%= f.text_field :nombre, class: "form-control" %>
  </div>
  <div class="col-md-2">
    <%= f.label :edad, t('familymember.edad'), class: "form-label" %>
    <%= f.text_field :edad, class: "form-control" %>
  </div>
  <div class="col-md-2">
    <%= f.label :derechohabiente, t('familymember.derechohabiente'), class: "form-label" %>
    <%= f.select :derechohabiente, FamilyMember::DH, {}, { class: "form-select" } %>
  </div>
  <div class="col-12">
    <%= f.label :comentarios, t('familymember.comentarios'), class: "form-label" %>
    <%= f.text_field :comentarios, class: "form-control" %>
  </div>
</div>
