<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%= csrf_meta_tag %>
    <%= csp_meta_tag %>
    <%= render 'layouts/includes' %>
  </head>
  <body>
    <%= render 'layouts/header' if signed_in? %>
    <div class="container-fluid">
      <div class="row">
        <% if signed_in? %>
        <div class="col-md-3 col-xl-2">
          <%= render 'layouts/sidebar' %>
        </div>
        <% end %>
        <main class="col-md-9 col-xl-10 pl-3 pr-5 py-3" role="main">
          <% flash.each do |key, value| %>
            <div class="<%= flash_class(key) %>">
              <%= value %>
            </div>
            <% end %>
		        <%= yield %>
          <%#= render 'layouts/footer' %>
          <%#= render 'layouts/footer2' %>
          <%= debug(params) if Rails.env.development? %>
        </main>
      </div>
    </div>
  </body>
</html>
