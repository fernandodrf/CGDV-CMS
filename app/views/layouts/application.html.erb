<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%= csrf_meta_tag %>
    <%= csp_meta_tag %>
    <%= render 'layouts/includes' %>
    <%-# render 'layouts/ga' if Rails.env.production? -%>
    <%= render 'layouts/ga'%>

  </head>
  <body>
    <div class="container-xl py-3 app-shell">
      <%= render 'layouts/header' %>
      <%= render 'layouts/navigation' %>
      <%= render 'layouts/navigation2' %>
      <main class="card border-0 shadow-sm app-main-card">
        <div class="card-body p-3 p-md-4">
          <%= render 'layouts/flash' %>
        <div class="main">
		  <%= yield %>
		</div>
        </div>
      </main>
      
      <%= render 'layouts/footer' %>
      <%= render 'layouts/footer2' %>
      <% if Rails.env.development? %>
        <details class="mt-3 small">
          <summary class="text-muted">Debug params</summary>
          <pre class="bg-light border rounded p-2"><%= debug(params) %></pre>
        </details>
      <% end %>
    </div>
  </body>
</html>
