<div class="page-toolbar mb-3">
  <div class="d-flex flex-column flex-lg-row justify-content-between align-items-start align-items-lg-center gap-2">
    <h1 class="h2 mb-0"><%= t('note.title') %>: <%= @note.folio %></h1>
    <div class="d-flex flex-wrap gap-2">
      <%= link_to t('helpers.submit.update', :model => "Nota"), edit_note_path(@note), class: "btn btn-primary btn-sm" %>
      <%= link_to t('helpers.print'), print_note_path(@note), class: "btn btn-outline-secondary btn-sm" %>
    </div>
  </div>
</div>
<%= render 'noteinfo' %>
<%= render 'attachments/attachments', :model => @note %>
