<tr>
  <td><%= link_to "#{patient.cgdvcode}", patient, class: "fw-semibold" %></td>
  <td><%= link_to "#{patient.name}", patient %></td>
  <td class="text-muted"><%= l patient.created_at, :format => :small %></td>
  <td><span class="badge text-bg-light border"><%= pat_status(patient.status) %></span></td>
  <td class="smally"><%= link_to "#{t('header.note')}: #{patient.notes.count}", notas_patient_path(patient), class: "btn btn-outline-secondary btn-sm" %></td>
  <td class="smally"><%= link_to t('helpers.print'), print_patient_path(patient), class: "btn btn-outline-secondary btn-sm" %></td>
  <% if can? :destroy, @patient %>
  <td class="smally"><%= link_to t('helpers.delete.msg'), patient, :method => :delete, :confirm => t('helpers.delete.conf'), :title => "#{t('helpers.delete.msg')} #{patient.name}", class: "btn btn-outline-danger btn-sm" %></td>
  <% end %>
</tr>
