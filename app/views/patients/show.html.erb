<table class="profile" summary="Patient information">
  <tr>
    <td class="main">
      <h1>
        <%= @patient.name %>
      </h1>
    </td>
    <td class="sidebar round">
      <strong><%= t('patient.name') %>:</strong> <%= @patient.name %><br />
      <strong><%= t('patient.cgdvcode') %>:</strong> <%= @patient.cgdvcode %><br />
      <strong>URL</strong>  <%= link_to patient_path(@patient), @patient %>
    </td>
  </tr>
</table>
