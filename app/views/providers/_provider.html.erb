<tr>
  <td><%= link_to "#{provider.proveedor}", provider, class: "fw-semibold" %></td>
  <td><%= link_to "#{provider.name}", provider %></td>
  <% if can? :destroy, @provider %>
  <td class="text-end"><%= link_to t('helpers.delete.msg'), provider, :method => :delete, :confirm => t('helpers.delete.conf'), :title => "#{t('helpers.delete.msg')} #{provider.name}", class: "btn btn-outline-danger btn-sm" %></td>
  <% end %>
</tr>
