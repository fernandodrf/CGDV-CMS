<div class="card border-0 shadow-sm mb-3">
  <div class="card-header d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-2">
    <strong><%= t('patient.info') %></strong>
    <%= link_to t('helpers.submit.update', :model => "Datos Principales"), edit_provider_path(@provider), class: "btn btn-outline-primary btn-sm" %>
  </div>
  <div class="card-body p-0">
    <table class="table mb-0 app-table">
      <tbody>
        <tr><td colspan="2"><%= t('provider.proveedor') %>: <%= @provider.proveedor %></td></tr>
        <tr>
          <td><%= t('patient.name') %>: <%= @provider.name %></td>
          <td><%= t('patient.cgdvcode') %>: <%= @provider.cgdvcode %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
