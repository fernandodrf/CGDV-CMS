<div class="page-toolbar mb-3">
  <h1 class="h2 mb-0"><%= t('helpers.submit.create', :model => "Proveedor") %></h1>
</div>
<div class="card border-0 shadow-sm app-form-card">
  <div class="card-body p-3 p-md-4">
    <%= nested_form_for(@provider, html: { class: "app-form" }) do |f| %>
      <%= render 'fields', :f => f %>
      <div class="d-flex justify-content-end gap-2 mt-3">
        <%= f.submit t('helpers.create'), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
