  <div class="card-header d-flex justify-content-between align-items-center gap-2">
    <strong><%= t('patient.tels') %></strong>
    <%= link_to t('helpers.submit.create', :model => "Telefono"), new_polymorphic_path([model,Telephone]), class: "btn btn-outline-primary btn-sm" %>
  </div>
  <div class="table-responsive">
    <table class="table mb-0 app-table">
      <tbody>
        <% unless model.telephones.empty? %>
          <%= render @telephones, :model => model %>
        <% else %>
          <tr><td class="text-muted">Sin tel√©fonos registrados.</td></tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
