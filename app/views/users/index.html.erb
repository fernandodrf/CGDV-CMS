<div class="page-toolbar mb-3">
  <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-2">
    <h1 class="h2 mb-0"><%= t('user.index') %></h1>
    <%= link_to t('helpers.submit.create', :model => "Nuevo Usuario"), new_user_path, class: "btn btn-primary btn-sm" %>
  </div>
</div>

<div class="d-flex justify-content-end mb-2">
  <div class="pagination-wrap"><%= paginate @users %></div>
</div>

<div class="card border-0 shadow-sm list-card">
  <div class="table-responsive">
    <table class="table table-hover align-middle mb-0 app-table">
      <thead class="table-light">
        <tr>
          <th><%= t('user.name') %></th>
          <th><%= t('user.email') %></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <%= render @users %>
      </tbody>
    </table>
  </div>
</div>

<div class="pagination-wrap mt-3"><%= paginate @users %></div>
