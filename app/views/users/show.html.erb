<div class="page-toolbar mb-3">
  <div class="d-flex flex-column flex-lg-row justify-content-between align-items-start align-items-lg-center gap-2">
    <h1 class="h2 mb-0"><%= @user.name %></h1>
    <% if current_user.admin? || current_user == @user %>
      <%= link_to t('helpers.edit'), edit_user_path(@user), class: "btn btn-primary btn-sm" %>
    <% end %>
  </div>
</div>

<div class="row g-3">
  <div class="col-12 col-lg-4">
    <div class="card border-0 shadow-sm">
      <div class="card-body text-center">
        <% if @user.avatar? %>
          <%= image_tag(image_user_path(@user), :alt => "Avatar", :class => "img-fluid rounded useravatar mb-3") %>
        <% else %>
          <div class="user-avatar-placeholder mb-3">USER</div>
        <% end %>
        <h2 class="h5 mb-0"><%= @user.name %></h2>
      </div>
    </div>
  </div>
  <div class="col-12 col-lg-8">
    <div class="card border-0 shadow-sm">
      <div class="card-body p-0">
        <div class="table-responsive">
          <table class="table mb-0 app-table">
            <tbody>
              <tr>
                <th class="table-light w-25"><%= t('user.email') %></th>
                <td><%= @user.email %></td>
              </tr>
              <tr>
                <th class="table-light">Expediente de Voluntario</th>
                <td>
                  <% unless @user.volunteer.nil? %>
                    <%= link_to @user.volunteer.name, @user.volunteer %>
                  <% else %>
                    <%= link_to "No tiene expediente asignado, asignar?", edit_user_path(@user) %>
                  <% end %>
                </td>
              </tr>
              <tr>
                <th class="table-light">Veces Logeadas</th>
                <td><%= @user.sign_in_count %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
