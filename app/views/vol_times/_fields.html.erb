<%= render 'shared/error_messages', :object => f.object %>
<div class="row g-3 app-form">
  <div class="col-12 col-lg-6">
    <%= f.label :evento, t('volunteer.evento'), class: "form-label" %>
    <%= f.text_field :evento, class: "form-control" %>
  </div>

  <div class="col-12 col-md-4 col-lg-3">
    <%= f.label :volunteer_id, t('patient.cgdvcode'), class: "form-label" %>
    <%= f.collection_select :volunteer_id, Volunteer.order('cgdvcode'), :id, :cgdvcode, {}, class: "form-select" %>
  </div>

  <div class="col-12 col-md-8 col-lg-3">
    <%= f.label :volunteer_id, t('patient.name'), class: "form-label" %>
    <div id="volunteer_name" class="form-control bg-light"> </div>
  </div>

  <div class="col-12 col-md-4">
    <%= f.label :horas, t('volunteer.horas'), class: "form-label" %>
    <%= f.text_field :horas, class: "form-control" %>
  </div>
</div>
