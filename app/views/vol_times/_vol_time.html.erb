<tr>
  <% if can? :read, Volunteer %>
  <td><%= link_to vol_time.volunteer.cgdvcode, volunteer_path(vol_time.volunteer_id), class: "fw-semibold" %></td>
  <% end %>
  <td><%= link_to l(vol_time.created_at, :format => :small), vol_time %></td>
  <td><%= link_to vol_time.horas, vol_time %></td>
  <td><%= link_to vol_time.evento, vol_time %></td>
  <td class="smally text-end">
    <div class="d-inline-flex gap-1 flex-wrap justify-content-end">
      <% if can? :edit, vol_time %>
        <%= link_to t('helpers.edit'), edit_vol_time_path(vol_time), class: "btn btn-outline-primary btn-sm" %>
      <% end %>
      <% if can? :destroy, vol_time %>
        <%= link_to t('helpers.delete.msg'), vol_time_path(vol_time), :method => :delete, :confirm => t('helpers.delete.conf'), :title => "#{t('helpers.delete.msg')} #{vol_time.evento}", class: "btn btn-outline-danger btn-sm" %>
      <% end %>
    </div>
  </td>
</tr>
