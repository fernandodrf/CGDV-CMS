<div class="page-toolbar mb-3">
  <div class="d-flex flex-column flex-lg-row justify-content-between align-items-start align-items-lg-center gap-2">
    <div class="d-flex align-items-center gap-3">
      <% if @volunteer.avatar? %>
        <%= image_tag(image_volunteer_path(@volunteer), :alt => "Avatar", :class => "volunteer-show-avatar rounded-circle") %>
      <% end %>
      <h1 class="h2 mb-0"><%= @volunteer.name %></h1>
    </div>
    <div class="d-flex flex-wrap gap-2">
      <%= link_to t('helpers.submit.update', :model => "Voluntario"), edit_volunteer_path(@volunteer), class: "btn btn-primary btn-sm" %>
      <%= link_to t('timereport.volunteer'), trep_volunteer_path(@volunteer), class: "btn btn-outline-primary btn-sm" %>
    </div>
  </div>
</div>

<%= render 'volunteerinfo' %>
<div class="mt-3"><%= render 'tiempos' %></div>
<% if !(@volunteer.socialservices.empty?) and (@volunteer.status == 1) %>
  <div class="mt-3"><%= render 'socialservice' %></div>
  <div class="mt-3"><%= render 'dailyschedules/schedule' %></div>
<% end %>
<% if !(@volunteer.subprogram.nil?) and (@volunteer.subprogram.sobreviviente) %>
  <div class="mt-3"><%= render 'diagnosticos/diagnosticosinfo', :model => @volunteer %></div>
<% end %>
<div class="mt-3"><%= render 'telephones/telephoneinformation', :model => @volunteer %></div>
<div class="mt-3"><%= render 'addresses/addressinformation', :model => @volunteer %></div>
<div class="mt-3"><%= render 'emails/emailinfo', :model => @volunteer  %></div>
<div class="mt-3"><%= render 'subprograms/subprograminfo' %></div>
<div class="mt-3"><%= render 'addinfos/additionalinformation', :model => @volunteer %></div>
<div class="mt-3"><%= render 'comments/comments', :model => @volunteer %></div>
